<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="LargeInverseHeadingStyle" parent="@android:style/TextAppearance.Large">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">center</item>
  </style>
  <style name="LargeHeadingStyle" parent="@android:style/TextAppearance.Large.Inverse">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">center</item>
  </style>
  <style name="HeadingStyle" parent="@android:style/TextAppearance.Medium.Inverse">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_marginLeft">5dp</item>
    <item name="android:layout_marginRight">5dp</item>
  </style>
  <style name="TextStyle" parent="@android:style/TextAppearance.Small.Inverse">
    <item name="android:layout_marginBottom">5dp</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <style name="TextLabelStyle" parent="@style/TextStyle">
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">left</item>
    <item name="android:layout_marginLeft">10dp</item>
  </style>
  <style name="TextValueStyle" parent="@style/TextStyle">
    <item name="android:gravity">right</item>
    <item name="android:layout_marginRight">10dp</item>
  </style>
</resources>
